@{
    ViewData["Title"] = "Home Page";
}

    <form asp-action="Explore" asp-controller="Home" method="post" class="mt-4">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="text-dark" for="check">Plateau Coordinate</label>
                    <input class="form-control" name="plateau" id="plateau" type="text" required>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="text-dark" for="return">First Rover Coordinate </label>
                    <input class="form-control" name="firstRoverPos" id="firstRoverPos" type="text" required>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="text-dark" for="return">First Rover Movement </label>
                    <input class="form-control" name="firstRoverMove" id="firstRoverMove" type="text" required>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="text-dark" for="return">Second Rover Coordinate </label>
                    <input class="form-control" name="secondRoverPos" id="secondRoverPos" type="text" required>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="form-group">
                    <label class="text-dark" for="return">Second Rover Movement </label>
                    <input class="form-control" name="secondRoverMove" id="secondRoverMove" type="text" required>
                </div>
            </div>
            <div class="col-lg-12 text-left">
                <button type="submit" class="btn btn-info"> Explore</button>
            </div>
        </div>
    </form>